{
    "name": "Port Di",
    "version": "0.0.3",
    "description": "Port Di (Portuguease Idea) is a extension for language portuguese",
    "browser_action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        }
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "activeTab",
        "storage",
        "declarativeContent"
    ],
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["src/script.js"]
        }
    ],

    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    },
    "manifest_version": 2
}